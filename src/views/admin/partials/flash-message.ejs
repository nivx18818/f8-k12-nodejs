<div class="flash-messages">
    <style>
        .flash-message {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 16px 20px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #ccc;
            background: #ccc;
        }

        .flash-message.success {
            border-color: #a3cfbb;
            background: #d1e7dd;
        }

        .flash-message.error {
            border-color: #f5c6cb;
            background: #f8d7da;
        }

        .flash-message.warning {
            border-color: #ffeeba;
            background: #fff3cd;
        }

        .flash-message.info {
            border-color: #bee5eb;
            background: #d1ecf1;
        }
    </style>
    <% if (flashMessages && flashMessages.length) { %>
        <% flashMessages.forEach((flash) => { %>
            <div class="flash-message <%= flash.type %>"><%= flash.message %></div>
        <% }); %>
        <script>
            setTimeout(() => {
                document.querySelectorAll('.flash-message').forEach(msg => {
                    msg.style.opacity = '0';
                    setTimeout(() => msg.remove(), 300);
                });
            }, 3000);
        </script>
    <% } %>
</div>
