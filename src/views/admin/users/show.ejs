<div class="content-header">
    <h1>User Detail</h1>
    <div>
        <a href="/admin/users" class="btn btn-secondary" id="backButton">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <a href="edit" class="btn btn-primary" id="editButton">
            <i class="fas fa-edit"></i> Edit
        </a>
    </div>
</div>

<!-- User Details Container -->
<div class="card">
    <div class="card-header">
        <h3 id="itemTitle"><%= user?.name %></h3>
    </div>
    <div class="card-body">
        <div id="itemContent">
            <div class="detail-section">
                <h3>Basic Information</h3>
                <table class="detail-table">
                    <tr>
                        <td>Name:</td>
                        <td><%= user?.name %></td>
                    </tr>
                    <tr>
                        <td>Username:</td>
                        <td><%= user?.username %></td>
                    </tr>
                    <tr>
                        <td>Gender:</td>
                        <td><%= user?.gender %></td>
                    </tr>
                    <tr>
                        <td>Birthday:</td>
                        <td><%= user?.birthday %></td>
                    </tr>
                </table>
            </div>

            <div class="detail-section">
                <h3>Contact Information</h3>
                <table class="detail-table">
                    <% if (user?.email) { %>
                        <tr>
                            <td>Email:</td>
                            <td><%= user?.email %></td>
                        </tr>
                    <% } %>
                    <% if (user?.phone) { %>
                        <tr>
                            <td>Phone:</td>
                            <td><%= user?.phone %></td>
                        </tr>
                    <% } %>
                    <% if (user?.address) { %>
                        <tr>
                            <td>Address:</td>
                            <td><%= user?.address %></td>
                        </tr>
                    <% } %>
                </table>
            </div>

            <div class="detail-section">
                <h3>Account Details</h3>
                <table class="detail-table">
                    <tr>
                        <td>Created At:</td>
                        <td><%= user?.createdAt?.toLocaleString() %></td>
                    </tr>
                    <% if (user?.updatedAt) { %>
                        <tr>
                            <td>Last Updated:</td>
                            <td><%= user?.updatedAt?.toLocaleString() %></td>
                        </tr>
                    <% } %>
                </table>
            </div>

            <!-- Placeholder for additional details -->
            <% if (user?.additionalDetails) { %>
                <div class="detail-section">
                    <h3>Additional Details</h3>
                    <!-- Render additional details here -->
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Activity History -->
<div class="card">
    <div class="card-header">
        <h3>Activity History</h3>
    </div>
    <div class="card-body">
        <ul class="activity-list" id="activityList">
            <!-- Will be populated with JavaScript -->
        </ul>
    </div>
</div>

<style>
    /* Additional styles for the detail page */
    .detail-section {
        margin-bottom: 30px;
    }

    .detail-section h3 {
        font-size: 18px;
        color: #333;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid #eee;
    }

    .detail-table {
        width: 100%;
        border-collapse: collapse;
    }

    .detail-table td {
        padding: 10px 0;
        border-bottom: 1px solid #f5f5f5;
    }

    .detail-table td:first-child {
        width: 150px;
        color: #666;
    }

    .activity-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .loading-spinner {
        text-align: center;
        padding: 40px;
        color: #666;
    }
</style>
