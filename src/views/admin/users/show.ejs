<!-- User Header -->
<div class="user-detail-header">
    <h1>User Detail</h1>
    <div class="header-buttons">
        <a href="#" class="btn-primary"> <i class="fas fa-edit"></i> Edit </a>
        <a href="users.html" class="btn-secondary">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>
</div>

<!-- User Information -->
<div class="user-detail-card">
    <div class="user-info">
        <div class="user-image-container">
            <img
                src="https://picsum.photos/200/200"
                alt="User"
                class="user-detail-image"
            />
        </div>
        <div class="user-detail-info">
            <h2><%= user.name %></h2>

            <div class="user-stock">
                <span class="badge badge-gender">In Stock</span>
                <span>75 units available</span>
            </div>

            <div class="info-row">
                <div class="info-label">Username</div>
                <div class="info-value"><%= user.username %></div>
            </div>

            <div class="info-row">
                <div class="info-label">Created Date</div>
                <div class="info-value"><%= user.created_at %></div>
            </div>

            <div class="info-row">
                <div class="info-label">Last Updated</div>
                <div class="info-value"><%= user.updated_at %></div>
            </div>

            <!-- User Footer Actions -->
            <div class="user-footer">
                <div class="footer-left">
                    <a href="/admin/users" class="btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Users
                    </a>
                </div>
                <div class="footer-right">
                    <a href="#" class="btn-primary">
                        <i class="fas fa-edit"></i> Edit User
                    </a>
                    <a
                        href="#"
                        class="btn-danger delete-user"
                        data-id="1"
                        data-name="Wireless Headphones"
                    >
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
